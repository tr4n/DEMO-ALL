<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    android:padding="2dp"
    android:background="#fff"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:elevation="1dp"
        android:id="@+id/iv_remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#c3000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_close_black_24dp"/>

    <LinearLayout
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:orientation="vertical"
        android:background="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_loading_favorite_media"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/ic_gif_red_24dp"
            android:background="#f0f0"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_favorite_media"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/igif"
            android:visibility="visible" />


        <TextView
            android:id="@+id/tv_title_favorite_media"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#8b70ae"
            android:elevation="1dp"
            android:textAllCaps="true"
            android:textSize="12sp"
            android:padding="2dp"
            android:text="TITLES"
            android:textAlignment="center"
            android:ellipsize="marquee"
            android:textColor="#fff"
            android:textStyle="bold"
            android:singleLine="true" />
    </LinearLayout>


</RelativeLayout>